[Unit]
Description=smartmeter MQTT publisher
After=network.target auditd.service
WorkingDirectory=/opt/smartmeterMQTT
StandardOutput=file:/var/log/smartmeterMQTT.log
StandardError=file:/var/log/smartmeterMQTT.log
SyslogIdentifier=smartmeterMQTT

[Service]
ExecStart=/opt/smartmeterMQTT/smartmeterMQTT.php
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
Alias=smartmeterMQTT.service
